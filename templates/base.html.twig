{# Cleaned base layout for technician - No search bar #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Technicien - MaintenancePro{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link rel="icon" href="{{ asset('img/favicon.ico') }}">

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Roboto:wght@500;700;900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries -->
    <link href="{{ asset('lib/animate/animate.min.css') }}" rel="stylesheet">
    <link href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}" rel="stylesheet">
    <link href="{{ asset('lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css') }}" rel="stylesheet">

    <!-- Bootstrap & Main CSS -->
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
</head>
<body>

<!-- Navbar Start -->
<nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top p-0">
    <a href="{{ path('technicien_dashboard') }}" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
        <h1 class="m-0 text-primary"><i class="far fa-hospital me-3"></i>MaintenancePro</h1>
    </a>
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ms-auto p-4 p-lg-0">
            <li class="nav-item"><a href="{{ path('technicien_dashboard') }}" class="nav-link">Accueil</a></li>
            <li class="nav-item"><a href="{{ path('panne_index') }}" class="nav-link">Mes Pannes</a></li>
            <li class="nav-item"><a href="{{ path('technicien_machine_list') }}" class="nav-link">Machines</a></li>
        </ul>

        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="{{ app.user.profileImage ? asset('uploads/' ~ app.user.profileImage) : asset('img/user-default.png') }}"
                         class="rounded-circle me-2"
                         style="width: 35px; height: 35px; object-fit: cover;">
                    <span>{{ app.user.nom }} {{ app.user.prenom }}</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                    <li><a class="dropdown-item" href="{{ path('technicien_profile') }}"><i class="bi bi-person"></i> Mon Profil</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right"></i> Déconnexion</a></li>
                </ul>
            </li>
        </ul>
    </div>
</nav>
<!-- Navbar End -->

{% block body %}{% endblock %}

<!-- Footer Start -->
<footer class="bg-dark text-light mt-5 pt-5">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-6 col-md-6">
                <h5 class="text-light mb-4">Adresse</h5>
                <p><i class="fa fa-map-marker-alt me-3"></i>Tunis, Tunisie</p>
                <p><i class="fa fa-phone-alt me-3"></i>+216 12 334 567</p>
                <p><i class="fa fa-envelope me-3"></i>MaintenancePro@gmail.com</p>
            </div>
            <div class="col-lg-6 col-md-6">
                <h5 class="text-light mb-4">Liens Rapides</h5>
                <a class="btn btn-link" href="{{ path('technicien_profile') }}">Mon Profil</a>
                <a class="btn btn-link" href="{{ path('technicien_machine_list') }}">Mes Machines</a>
                <a class="btn btn-link" href="{{ path('panne_index') }}">Mes Pannes</a>
            </div>
        </div>
    </div>
    <div class="container text-center pb-3">
        <p class="mb-0">&copy; 2025 MaintenancePro. Tous droits réservés.</p>
    </div>
</footer>
<!-- Footer End -->

{% block javascripts %}{% endblock %}
</body>
</html>
